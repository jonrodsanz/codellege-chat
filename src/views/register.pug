doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    // Jquery
    script(src='https://code.jquery.com/jquery-3.3.1.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
    link(rel='icon', href='../assets/general/favicon.png')
    // Boostrap 4
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    // Fontawesome
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    // Custom CSS rules
    link(rel='stylesheet', href='./css/register.css')
    title Developers Chat
  body
    #registerCard.card.col-md-4.col-sm-8.mx-auto
      .card-header.text-center
        img#profilePicture.rounded-circle.mx-auto(src='https://png2.kisspng.com/20180402/uzq/kisspng-computer-icons-astronaut-outer-space-astronaut-5ac1d584aecd37.613204711522652548716.png')
      .card-body
        form#registerForm(action="/api/users", method="POST", autocomplete="off")
          input#registerForm__username.form-control.mb-3(type='text', placeholder="Github's username", name='username')
          input#registerForm__email.form-control.mb-3(type='email', placeholder='E-mail', name='email')  
          .form-group
            select#registerForm__devLanguage.form-control(required)
              option(disabled) Your Favorite Language...
              option Nodejs
              option Go
              option C#
              option Java
          button#registerForm__submit.btn.btn-dark.btn-block(type='submit') Join the Community
    script(src='https://momentjs.com/downloads/moment-with-locales.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/register.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')